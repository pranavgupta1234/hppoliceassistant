<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="225dp"
    android:layout_marginBottom="6dp"
    android:padding="6dp"
    cardview:cardCornerRadius="0dp"
    cardview:cardUseCompatPadding="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
            <ImageView
                android:id="@+id/image"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:scaleType="fitXY" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="ID : "
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_carditem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/entryid_text"/>
                <TextView
                    android:id="@+id/entry_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"
                    android:textSize="@dimen/text_carditem"
                    android:textColor="@android:color/holo_green_dark"
                    android:layout_toRightOf="@id/entryid_text"/>
                <TextView
                    android:text="Vehicle No : "
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_carditem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/vehno_text"/>
                <TextView
                    android:id="@+id/vehno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="@dimen/text_carditem"
                    android:layout_marginTop="20dp"
                    android:textColor="@android:color/holo_green_dark"
                    android:layout_toRightOf="@id/vehno_text"/>
                <TextView
                    android:text="Phone No : "
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_carditem"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/vehno_text"
                    android:id="@+id/phno_text"/>
                <TextView
                    android:id="@+id/phno"
                    android:textSize="@dimen/text_carditem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vehno"
                    android:text=""
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/phno_text"/>
                <TextView
                    android:text="Place Name : "
                    android:textStyle="bold"
                    android:textSize="@dimen/text_carditem"
                    android:textColor="#000000"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/phno_text"
                    android:id="@+id/plname_text"/>
                <TextView
                    android:id="@+id/name_of_place"
                    android:textSize="@dimen/text_carditem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/phno"
                    android:text=""
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/plname_text"/>
                <TextView
                    android:text="Description(below) : "
                    android:textStyle="bold"
                    android:textSize="@dimen/text_carditem"
                    android:layout_marginLeft="4dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/plname_text"
                    android:id="@+id/des"
                    android:gravity="center"/>
                <TextView
                    android:text=""
                    android:textSize="@dimen/text_carditem"
                    android:id="@+id/desc"
                    android:textColor="#000000"
                    android:layout_below="@id/des"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="3dp"/>
                <TextView
                    android:text="Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_picker"
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:text="time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/time"
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"/>
            </RelativeLayout>
        </LinearLayout>
</android.support.v7.widget.CardView>