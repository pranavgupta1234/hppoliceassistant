<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/hpp"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:layout_below="@id/hpp"
        android:background="@drawable/custom_edittext_border"
        android:id="@+id/district"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/district"
        android:padding="12dp"
        android:background="@drawable/custom_edittext_border"
        android:id="@+id/police_station"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/police_station"
        android:padding="12dp"
        android:background="@drawable/custom_edittext_border"
        android:id="@+id/police_post"/>

    <EditText
        android:hint="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:layout_below="@id/police_post"
        android:background="@drawable/custom_edittext_border"
        android:id="@+id/name"/>
    <EditText
        android:hint="Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edittext_border"
        android:inputType="textPassword"
        android:padding="12dp"
        android:layout_below="@id/name"
        android:id="@+id/password"/>
    <Button
        android:text="Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@+id/password"
        android:id="@+id/login"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_back"
        android:padding="12dp"/>

</RelativeLayout>